{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": false,
        "outDir": "out"
    },
    "filesGlob": [
        "./src/**/*.ts"
    ],
    "files": [
        "./src/http/Request.ts",
        "./src/http/XHR.ts",
        "./src/utils/globals.ts",
        "./src/utils/underscore.ts"
    ]
}
